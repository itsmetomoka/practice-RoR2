<table class="table">
	<%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %>
	<tr>
		<th>name</th>
		<th><%= user.name %></th>
	</tr>
	<tr>
		<th>introduction</th>
		<th><%= user.introduction %></th>
	</tr>
	<tr>
		<th><%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
			<i class="fas fa-wrench"></i>
		<% end %>
		</th>
	</tr>
</table>